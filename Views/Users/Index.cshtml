@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}


<div class="card-header bg-primary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-light py-2">Users</h2>
        </div>
    </div>
</div>

@* <a asp-action="Add" class="btn btn-success btn-sm m-3"> <i class="bi bi-plus-circle"></i> Create User</a> *@

<table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary text-white">
                <th>Actions</th>
                <th>Full Name</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Street</th>
                <th>City</th>
                @* <th>Building Number</th>
                <th>Floor Number</th> *@
                <th>Role(s)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <a href="/users/manageroles/@user.Id" class="btn btn-sm btn-primary mb-2">Manage roles</a>
                        @* <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i></a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a> *@
                    </td>
                <td>@user.FirstName @user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Street</td>
                    <td>@user.City</td>
                   @*  <td>@user.Building_Number</td>
                    <td>@user.Floor_Number</td> *@
                    <td>@string.Join(", ", user.UserRoles.ToList())</td>
                </tr>
            }
        </tbody>
    </table>
