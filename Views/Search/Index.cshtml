@{
    ViewData["Title"] = "Search";
}
@if (Model.Count > 0)
{
    <div class="container">
    <div class="row">
        <div class="col-2">
            <partial name="_FilterFormPartial"></partial>
        </div>
        <div class="col-10">
            <partial name="_DisplayProductsPartialcshtml"></partial>
        </div>
    </div>
</div>
}
else
{
    <div class="alert alert-danger mt-5" role="alert">
        <h4 class="alert-heading">No Results Found!</h4>
        <p>We couldn't find a matching result to your search. Please try again with a different keyword or refine your search criteria.</p>
        <hr>
        <p>If you still couldn't find what you're searching for, try checking similar products from our collection.</p>
    </div>
}